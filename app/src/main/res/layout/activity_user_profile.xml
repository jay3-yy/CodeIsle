<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        tools:context=".UserProfileActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profileAvatar"
            app:layout_constraintTop_toTopOf="@id/profileAvatar"
            tools:text="用户名" />

        <TextView
            android:id="@+id/profileLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/placeholder_avatar"
            android:paddingHorizontal="8dp"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/profileUsername"
            app:layout_constraintTop_toBottomOf="@id/profileUsername"
            tools:text="Lv.3" />

        <ProgressBar
            android:id="@+id/profileExpBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintEnd_toEndOf="@id/profileUsername"
            app:layout_constraintStart_toStartOf="@id/profileLevel"
            app:layout_constraintTop_toBottomOf="@id/profileLevel"
            tools:max="600"
            tools:progress="480" />

        <TextView
            android:id="@+id/profileIntroduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileAvatar"
            tools:text="这里是用户的个人简介..." />

        <LinearLayout
            android:id="@+id/statsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileIntroduction">

            <TextView android:id="@+id/profileJoinDate" style="@style/StatBox" tools:text="加入时间\n2025.08.16" />
            <TextView android:id="@+id/statsPostCount" style="@style/StatBox" tools:text="已发帖子\n71" />
            <TextView android:id="@+id/statsCommentCount" style="@style/StatBox" tools:text="已发回复\n311" />
            <TextView android:id="@+id/statsLikeCount" style="@style/StatBox" tools:text="收到赞\n45" />

        </LinearLayout>

        <TextView
            android:id="@+id/hotRepliesHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/hot_replies"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/repliesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotRepliesHeader"
            tools:itemCount="3"
            tools:listitem="@layout/item_user_reply" />

        <TextView
            android:id="@+id/hotTopicsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/hot_topics"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repliesRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotTopicsHeader"
            tools:itemCount="5"
            tools:listitem="@layout/item_user_post" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>